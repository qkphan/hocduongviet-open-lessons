{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Raw Exam Schema",
  "type": "object",
  "required": ["exam"],
  "properties": {
    "exam": {
      "type": "object",
      "required": [
        "title",
        "subject",
        "grade",
        "lesson_code",
        "duration",
        "questions"
      ],
      "properties": {
        "title": { "type": "string" },
        "subject": { "type": "string" },
        "grade": { "type": "integer" },
        "lesson_code": { "type": "string" },
        "duration": { "type": "integer" },

        "questions": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "required": ["id", "type", "content"],
            "properties": {
              "id": { "type": "string" },
              "type": {
                "type": "string",
                "enum": [
                  "mcq",
                  "tfq",
                  "shortAns",
                  "essayq",
                  "advanceessq"
                ]
              },
              "content": { "type": "string" },

              "difficulty": {
                "type": "string",
                "enum": ["easy", "medium", "hard"]
              },

              "cognitive_level": {
                "type": "string",
                "enum": [
                  "remember",
                  "understand",
                  "apply",
                  "analyze",
                  "evaluate",
                  "create"
                ]
              },

              "score": { "type": "number" },

              "choices": {
                "type": "array",
                "items": {
                  "type": "object",
                  "required": ["label", "content"],
                  "properties": {
                    "label": { "type": ["string", "boolean"] },
                    "content": { "type": "string" },
                    "is_correct": { "type": "boolean" }
                  }
                }
              },

              "answer_key": {},
              "explanation": { "type": "string" },
              "rubric": { "type": "string" }
            }
          }
        }
      }
    }
  }
}
