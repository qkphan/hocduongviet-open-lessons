{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Raw Exam Schema (Ingest Layer)",
  "type": "object",
  "required": ["schema_version", "exam_id", "metadata", "structure", "questions"],
  "additionalProperties": false,

  "properties": {
    "schema_version": {
      "type": "string"
    },

    "exam_id": {
      "type": "string",
      "minLength": 3
    },

    "metadata": {
      "type": "object",
      "required": [
        "title",
        "subject",
        "grade",
        "topic",
        "exam_type",
        "time_minutes",
        "total_questions",
        "created_by",
        "language"
      ],
      "additionalProperties": false,
      "properties": {
        "title": { "type": "string" },
        "subject": { "type": "string" },
        "grade": { "type": "integer", "minimum": 1, "maximum": 12 },
        "topic": { "type": "string" },
        "exam_type": { "type": "string" },
        "time_minutes": { "type": "integer", "minimum": 1 },
        "total_questions": { "type": "integer", "minimum": 1 },
        "created_by": { "type": "string" },
        "language": { "type": "string" }
      }
    },

    "structure": {
      "type": "object",
      "required": ["sections"],
      "additionalProperties": false,
      "properties": {
        "sections": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "required": ["section_id", "title", "questions"],
            "additionalProperties": false,
            "properties": {
              "section_id": { "type": "string" },
              "title": { "type": "string" },
              "description": { "type": "string" },
              "questions": {
                "type": "array",
                "items": { "type": "string" }
              }
            }
          }
        }
      }
    },

    "questions": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "question_id",
          "section_id",
          "type",
          "difficulty",
          "content",
          "choices",
          "correct_answer",
          "explanation",
          "learning_objective"
        ],
        "additionalProperties": false,
        "properties": {
          "question_id": { "type": "string" },
          "section_id": { "type": "string" },

          "type": {
            "type": "string",
            "enum": ["multiple_choice"]
          },

          "difficulty": {
            "type": "string",
            "enum": ["easy", "medium", "hard"]
          },

          "content": {
            "type": "string",
            "minLength": 5
          },

          "choices": {
            "type": "array",
            "minItems": 2,
            "items": {
              "type": "object",
              "required": ["choice_id", "content"],
              "additionalProperties": false,
              "properties": {
                "choice_id": {
                  "type": "string",
                  "enum": ["A", "B", "C", "D"]
                },
                "content": {
                  "type": "string",
                  "minLength": 1
                }
              }
            }
          },

          "correct_answer": {
            "type": "string",
            "enum": ["A", "B", "C", "D"]
          },

          "explanation": {
            "type": "string",
            "minLength": 5
          },

          "learning_objective": {
            "type": "string",
            "minLength": 3
          }
        }
      }
    },

    "sections": {
      "type": "array",
      "description": "Optional â€“ used by rule_validate_exam()",
      "items": {
        "type": "object"
      }
    }
  }
}
